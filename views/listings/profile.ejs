<% layout('layouts/boilerplate') %>
    <div class="w-[full] h-screen sm:h-full flex items-center justify-center sm:mt-8 mb-8 ">
        <div class="h-[700px] w-[600px] flex flex-col items-center border-2 border-black">
            <div class=" h-36 w-[85%]  flex items-center justify-around">
               <div class="border-2 border-black rounded-full h-36 w-36 flex items-center justify-center mt-2" ><i class="fa-regular fa-user text-[100px]"></i> </div>
                <div class="h-28 w-80 flex flex-col items-center justify-center">
                    <h1 class="text-2xl"><%= userName%></h1>
                    <h2 class="text-xl mt-2"><%= userId%></h2>
                </div>
            </div>

            <div class=" h-[90%] w-[70%] mt-4">
                <form action="/profile" method="post">
                    <div class="flex flex-col mb-4">
                        <label for="email" class="text-2xl mb-1">Username</label>
                        <input type="text" name="username" id="email"
                            class="rounded-md h-8 px-3 text-lg border-[1.5px] border-black" placeholder="Username"/>
                    </div>

                    <div class="flex flex-col mb-4">
                        <label for="email" class="text-2xl mb-1">Address</label>
                        <textarea name="address" id="address" cols="30" rows="5"
                            class="rounded-md text-lg border-[1.5px] border-black px-3" required></textarea>
                    </div>

                    <div class="flex flex-col mb-4">
                        <label for="email" class="text-2xl mb-1">Mobile</label>
                        <input type="tel" name="mobile" id="mobile"
                            class="rounded-md h-8 px-3 text-lg border-[1.5px] border-black" required />
                    </div>

                    <div class="flex flex-col mb-4">
                        <label for="email" class="text-2xl mb-1">Password</label>
                        <input type="password" name="password" id="password"
                            class="rounded-md h-8 px-3 text-lg border-[1.5px] border-black" />
                    </div>
                    <button
                        class="w-full text-3xl border-[1.5px] border-black bg-green-200 py-1 hover:bg-green-300 font-medium drop-shadow-xl mb-4 mt-4"
                        type="submit">
                        Update
                    </button>
                </form>
            </div>
        </div>
    </div>