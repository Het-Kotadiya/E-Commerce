<% layout('layouts/boilerplate') %>
  <div class="w-full h-[545px] flex overflow-x-auto snap-x hide scroll-smooth snap-proximity">
    <!-- Item 1 -->
    <div class="w-full sm:w-full sm:flex h-full flex flex-col justify-center flex-shrink-0 snap-center item-1">
      <h1 class="text-3xl sm:text-6xl font-bold ml-10">SUMMER SALE</h1>
      <h3 class="text-xl sm:text-2xl ml-10 mt-10">
        DON'T COMPROMISE ON STYLE! GET FLAT 30% OFF FOR NEW ARRIVALS
      </h3>
      <a href="/products">
        <button
          class="border-2 border-black w-fit px-6 py-3 text-xl ml-10 mt-10 hover:bg-black hover:text-white transition duration-300 ease-in-out">
          SHOP NOW
        </button>
      </a>
    </div>

    <!-- Item 2 -->

    <div class="w-full sm:w-full h-full flex-shrink-0 snap-center">
      <img
        src="https://images.unsplash.com/photo-1512576858180-07bf7d04d3ae?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NDR8fHN1aXR8ZW58MHwwfDB8fHww"
        alt="" class="w-full h-full object-cover" />
    </div>

    <!-- Item 3 -->
    <div
      class="w-full sm:w-full sm:flex h-full flex flex-col justify-center flex-shrink-0 snap-center item-2 text-white">
      <h1 class="text-3xl sm:text-6xl font-bold ml-10">WINTER SALE</h1>
      <h3 class="text-xl sm:text-2xl ml-10 mt-10">
        DON'T COMPROMISE ON STYLE! GET FLAT 30% OFF FOR NEW ARRIVALS
      </h3>
      <a href="/products">
        <button
          class="border-2 border-black w-fit px-6 py-3 text-xl ml-10 mt-10 hover:bg-black hover:text-white transition duration-300 ease-in-out">
          SHOP NOW
        </button>
      </a>
    </div>

    <!-- Item 4 -->
    <div class="w-full sm:w-full h-full flex-shrink-0 mr-4 snap-center">
      <img
        src="https://images.unsplash.com/photo-1548189797-82c6a7cb85d2?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8d2ludGVyJTIwd2VhcnxlbnwwfDB8MHx8fDA%3D"
        alt="" class="w-full h-full object-cover" />
    </div>
  </div>

  <!-- Product Tiles -->

  <div
    class="w-full h-full sm:h-[700px] flex items-center sm:justify-center mt-3 sm:mt-1 space-x-1 space-y-1 flex-wrap sm:px-2 sm:py-2">
    <!-- First Row -->
    <div class="w-full h-fit flex flex-col sm:flex-row justify-around">
      <!-- Item - 1 -->
      <div class="w-full sm:w-[32.8%] h-[350px] border-black tiles-item-1 flex flex-col items-center justify-center">
        <h1 class="text-4xl text-white font-bold">SHIRT STYLE!</h1>
        <a href="/products">
          <button
            class="w-fit px-4 py-2 mt-5 text-xl bg-white/50 hover:bg-black hover:text-white transition duration-300 ease-in-out">
            SHOP NOW
          </button>
      </div>

      <!-- Item 2 -->
      <div class="w-full sm:w-[32.8%] h-[350px] border-black tiles-item-2 flex flex-col items-center justify-center">
        <h1 class="text-4xl text-white font-bold">LOUNGEWEAR LOVE</h1>
        <a href="/products">
          <button
            class="w-fit px-4 py-2 mt-5 text-xl bg-white/50 hover:bg-black hover:text-white transition duration-300 ease-in-out">
            SHOP NOW
          </button>
      </div>

      <!-- Item 3 -->
      <div class="w-full sm:w-[32.8%] h-[350px] border-black tiles-item-3 flex flex-col items-center justify-center">
        <h1 class="text-4xl text-white font-bold">LIGHT JACKETS</h1>
        <a href="/products">
          <button
            class="w-fit px-4 py-2 mt-5 text-xl bg-white/50 hover:bg-black hover:text-white transition duration-300 ease-in-out">
            SHOP NOW
          </button>
      </div>
    </div>

    <!-- Second Row -->
    <div class="w-full h-fit flex flex-col sm:flex-row justify-around">
      <!-- Item 4 -->
      <div class="w-full sm:w-[49.5%] h-[340px] border-black tiles-item-4 flex flex-col items-center justify-center">
        <h1 class="text-4xl text-white font-bold">THE PERFECT JEANS</h1>
        <a href="/products">
          <button
            class="w-fit px-4 py-2 mt-5 text-xl bg-white/50 hover:bg-black hover:text-white transition duration-300 ease-in-out">
            SHOP NOW
          </button>
      </div>

      <!-- Item 5 -->
      <div class="w-full sm:w-[49.5%] h-[340px] border-black tiles-item-5 flex flex-col items-center justify-center">
        <h1 class="text-4xl text-white font-bold">TRADITONAL WEAR</h1>
        <a href="/products">
          <button
            class="w-fit px-4 py-2 mt-5 text-xl bg-white/50 hover:bg-black hover:text-white transition duration-300 ease-in-out">
            SHOP NOW
          </button>
        </a>
      </div>
    </div>
  </div>

  <!-- Popular Product Listing -->
  <div class="w-full h-full mt-3 px-4 sm:grid sm:grid-rows-2 sm:grid-cols-4 gap-1">
    <!-- Item 1 -->
    <% for(let item of dataItem.slice(0,8)) {%>
      <div class="group relative">
        <img src=" <%= item.img %> " alt="" class="h-full w-full object-cover" />

        <div
          class="absolute inset-0 bg-black bg-opacity-0 transition-opacity duration-300 ease-in-out group-hover:bg-opacity-50 flex items-center justify-center">
          <div class="relative z-10 w-[50%] h-[10%] flex items-center justify-between">
            <i class="fa-solid fa-cart-shopping hidden group-hover:inline-block bg-white rounded-full h-[40px] w-[40px] text-center py-[7px] text-lg cursor-pointer"
              id="cartBtn"></i>
            <a href="/products/<%= item.id%>">
              <i
                class="fa-solid fa-magnifying-glass hidden group-hover:inline-block bg-white rounded-full h-[40px] w-[40px] text-center py-[7px] text-lg cursor-pointer"></i>
            </a>
            <i
              class="fa-regular fa-heart hidden group-hover:inline-block bg-white rounded-full h-[40px] w-[40px] text-center py-[7px] text-lg cursor-pointer"></i>
          </div>
        </div>
      </div>
      <% } %>
  </div>