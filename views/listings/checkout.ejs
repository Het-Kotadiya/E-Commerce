<% layout('layouts/boilerplate') %>
<div class="h-full w-full flex justify-center">
   <form action="/confirm" method="get" class="h-[500px] w-[550px] mt-5 mb-7 p-5 flex flex-col item-center border-2 border-black">
    <div class="w-full h-10 mb-5 flex justify-center items-center text-3xl">
        <h1 class="text-3xl">Placing order for <%= userName %></h1>
    </div>
    <div class="mb-5 w-full text-2xl flex flex-col">
        <label for="pay">Mode of Payment</label>
        <textarea name="pay" id="" cols="1" rows="1" class="resize-none rounded-md h-8 px-3 text-lg border-[1.5px] border-black" readonly>Cash On Delivery [COD]</textarea>
    </div>
    <div class="text-2xl flex flex-col mb-5">
        <label for="address">Delivery Address</label>
        <textarea name="" id="" cols="30" rows="5" class="resize-none rounded-md  px-3 text-lg border-[1.5px] border-black" readonly required><%=address%></textarea>
    </div>
    <div class="text-2xl mb-7">
        <% 
        // Get the current date
        let currentDate = new Date();

        let num = Math.floor(Math.random() * 7) + 1
        
        // Add 3 days to the current date
        currentDate.setDate(currentDate.getDate() + num);

        // Format the date as a string
        let formattedDate = currentDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric'
        });
    %>
        Expected Delivery : <%= formattedDate %>
    </div>
    <button
    class="w-full text-3xl border-[1.5px] border-black bg-green-200 py-1 hover:bg-green-300 font-medium drop-shadow-xl mb-2"
    type="submit"
  >
    Place Order
  </button>
   </form>
</div>