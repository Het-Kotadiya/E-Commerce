<% layout('layouts/boilerplate') %>
<div class="min-h-screen w-full flex items-center justify-center antialiased">
  <div class="flex rounded-xl shadow-lg bg-transparent">
    <div
      class="relative hidden lg:flex flex-col min-h-full items-center justify-center"
    >

      <img
        src="<%=product.image.url%>"
        alt="product"
        class="w-[35rem] h-[26rem] rounded-xl mr-1"
      />
    </div>

    <div
      class="bg-white rounded-xl shadow-md h-[26rem] flex flex-col relative w-72 lg:w-96 flex-shrink-0"
    >
      <img
        src="<%=product.image.url%>"
        alt=""
        class="absolute lg:hidden w-full top-0 transform -translate-y-[38%]"
      />
      <div
        class="flex flex-col justify-center mt-26 lg:mt-0 px-6 text-gray-700 flex-1"
      >
        <h2
          class="text-black font-semibold text-2xl tracking-wide leading-none"
        >
          <%=product.title%>
        </h2>
        <h3 class="text-sm mt-2 text-gray-500"><%=product.description%></h3>

        <span class="flex items-center mt-1">
          <p class="text-xl">⭐⭐⭐⭐⭐</p>
          <span class="text-sm ml-2 text-gray-500">20k Reviews</span>
        </span>
        <span
          class="bg-green-400 p-1.5 py-1 rounded-md text-sm text-white w-20 h-6 mt-4 text-center"
          >Save <%=randomDiscountPercentage%>%</span>
          <span><%= product.category%></span>
      </div>

      <div class="px-6 flex items-center justify-between text-gray-700 mb-3">
        <p
          class="font-extrabold text-xl transform scale-110 leading-none flex flex-col lg:inline-block"
        >
          &#8377; <%=Math.ceil((product.price * 83)-
          ((randomDiscountPercentage/100) * (product.price * 83))) %>
          <span class="text-sm line-through opacity-50 lg:inline-block"
            >&#8377; <%=Math.ceil(product.price * 83)%>
          </span>
        </p>
        <div class="flex gap-2">
          <button class="hidden lg:button-icon w-10">❤️</button>
          <button class="button-primary">Add to cart</button>
        </div>
      </div>
    </div>
  </div>
</div>
